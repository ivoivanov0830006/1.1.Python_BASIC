some_text = "text"
print(some_text)
print(some_text[3])   tova e ravno "t"
print(some_text[-2])   tova e ravno "x"

some_text = "te xt"
for index, symbol in enumerate(some_text):
    print(f"Index = {index}, Symbol = {symbol}")  # tuk shte ni se otpechatat na "te xt" i simvolite i index-ite
                                                  # t.e nomeraciqta
------------------------------------------------------------------------------------
text = input()
for index in range(0, len(text)):
    print(text[index])
# OR
text = input()
for symbol in text:
   print(symbol)
------------------------------------------------------------------------------------
#Напишете програма, която чете текст (стринг), 
#въведен от потребителя и печата всеки символ от текста на отделен ред.
a = 2
b = 4
c = 0
d = 1
password_number = a*1000+b*100+c*10+d                       # 2401
print(f"\nPassword: {password_number}")                     # password will be printed on new line
------------------------------------------------------------------------------------
text = input("Type something: ")                            # "       Hello       "
print(text.strip())                                         # "Hello"    - removes all blank spaces
print(text.lower())                                         # "       hello       "
print(text.upper())                                         # "       HELLO       "        
------------------------------------------------------------------------------------
fruits = ["apples", "pear", "strawberrys"]
fruits[2:2] = "new_fruit"
print(fruits)                                      # ["apples", "pears", "new_fruit", "strawberrys"]
